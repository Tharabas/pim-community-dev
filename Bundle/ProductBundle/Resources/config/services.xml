<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="product_manager.class">Oro\Bundle\DataModelBundle\Service\FlexibleEntityManager</parameter>
        <parameter key="product_entity.shortname">OroProductBundle:ProductEntity</parameter>
        <parameter key="product_attribute.shortname">OroProductBundle:ProductAttribute</parameter>
        <parameter key="product_option.shortname">OroProductBundle:ProductAttributeOption</parameter>
        <parameter key="product_value.shortname">OroProductBundle:ProductAttributeValue</parameter>
    </parameters>

    <services>
        <service id="product_manager" class="%product_manager.class%">
             <argument type="service" id="doctrine.orm.entity_manager" />
             <argument>%product_entity.shortname%</argument>
             <argument>%product_attribute.shortname%</argument>
             <argument>%product_option.shortname%</argument>
             <argument>%product_value.shortname%</argument>
        </service>
    </services>

</container>
