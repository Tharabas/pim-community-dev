<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="manufacturer_manager.class">Oro\Bundle\DataModelBundle\Service\SimpleEntityManager</parameter>
        <parameter key="manufacturer_entity.shortname">OroManufacturerBundle:Manufacturer</parameter>
    </parameters>

    <services>
        <service id="manufacturer_manager" class="%manufacturer_manager.class%">
             <argument type="service" id="doctrine.orm.entity_manager" />
             <argument>%manufacturer_entity.shortname%</argument>
        </service>
    </services>

</container>
